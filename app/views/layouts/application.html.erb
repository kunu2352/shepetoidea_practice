<!DOCTYPE html>
<html>
  <head>
    <title>ShapeToIdea</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <span>LOGO</span>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to new_public_post_idea_path, class:'nav-link text-white' do %>
                    <i class="fa-solid fa-sign-out-alt"></i>投稿
                  <% end %>
                </li>
                
                <li class="nav-item">
                  <%= link_to public_user_path(current_user.id), class:'nav-link text-white' do %>
                    <i class="fa-solid fa-sign-out-alt"></i>マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class:'nav-link text-white' do %>
                    <i class="fa-solid fa-sign-out-alt"></i>ログアウト
                  <% end %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item"> 
                  <%= link_to destroy_admin_session_path, method: :delete, class:'nav-link text-white' do %>
                    <i class="fa-solid fa-sign-out-alt"></i>ログアウト
                  <% end %>
                </li>
                <li class="nav-item"> 
                  <%= link_to new_admin_category_path, class:'nav-link text-white' do %>
                    <i class="fa-solid fa-sign-out-alt"></i>カテゴリー
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item"> 
                  <%= link_to new_user_registration_path, class: 'nav-link text-white text-light' do %>
                    <i class="fa-solid fa-sign-in-alt"></i>新規登録
                  <% end %>
                </li>
                <li class="nav-item"> 
                  <%= link_to new_user_session_path, class: 'nav-link text-white text-light' do %>
                    <i class="fa-solid fa-sign-in-alt"></i>ログイン
                  <% end %>
                </li>
                <li class="nav-item"> 
                  <%= link_to new_admin_session_path, class: 'nav-link text-white text-light' do %>
                    <i class="fa-solid fa-sign-in-alt"></i>adminログイン
                  <% end %>
                </li>
              <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
